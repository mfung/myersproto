<% content_for :body_content_title do %>
  <%= @brand.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @brand.name %>
    </p>
  </section>
  <section>
    <h1>Logo</h1>
    <p>
      <%= image_fu @brand.logo, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @brand.description %>
    </p>
  </section>
  <section>
    <h1>Slug</h1>
    <p>
      <%=raw @brand.slug %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="brands">
      <% @brands.each do |brand| %>
        <li>
          <%= link_to brand.name, brand_url(brand) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
