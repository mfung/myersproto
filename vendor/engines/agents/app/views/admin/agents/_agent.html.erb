<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(agent) -%>">
  <span class='title'>
    <%= agent.company %> | <%= agent.name %> | <%= agent.territory %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), agent_url(agent),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_agent_path(agent),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_agent_path(agent),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => agent.name),
        :method => :delete %>
  </span>
</li>
