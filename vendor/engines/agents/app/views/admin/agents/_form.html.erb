<%= form_for [:admin, @agent] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @agent,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :company -%>
    <%= f.text_field :company, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label 'Contact' -%>
    <%= f.text_field :name -%>
  </div>
  
  <div class='field'>
    <%= f.label 'Territory' -%>
    <%= f.text_field :territory -%>
  </div>
  
  <div class='field'>
    <%= f.label :street -%>
    <%= f.text_field :street -%>
  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city -%>
  </div>
  
  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state -%>
  </div>
  
  <div class='field'>
    <%= f.label :zipcode -%>
    <%= f.text_field :zipcode -%>
  </div>
  
  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone -%>
  </div>
  
  <div class='field'>
    <%= f.label :fax -%>
    <%= f.text_field :fax -%>
  </div>
    
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>
  
  <div class='field'>
    <%= f.label :url -%>
    <%= f.text_field :url -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.agents.agent'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @agent.name)
              } %>
<% end -%>
