<% content_for :body_content_title do %>
  <%= @agent.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @agent.name %>
    </p>
  </section>
  <section>
    <h1>Street</h1>
    <p>
      <%=raw @agent.street %>
    </p>
  </section>
  <section>
    <h1>City</h1>
    <p>
      <%=raw @agent.city %>
    </p>
  </section>
  <section>
    <h1>State</h1>
    <p>
      <%=raw @agent.state %>
    </p>
  </section>
  <section>
    <h1>Zipcode</h1>
    <p>
      <%=raw @agent.zipcode %>
    </p>
  </section>
  <section>
    <h1>Phone</h1>
    <p>
      <%=raw @agent.phone %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @agent.email %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="agents">
      <% @agents.each do |agent| %>
        <li>
          <%= link_to agent.name, agent_url(agent) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
